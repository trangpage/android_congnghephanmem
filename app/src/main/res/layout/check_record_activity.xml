<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.trangpig.myapp.activity.TopicActivity"
    >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/editSearch"
        android:hint="Nhập thông tin tìm kiếm"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/lvDSSV"
        android:background="@drawable/border"
        android:layout_toStartOf="@+id/bntSearch" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:id="@+id/bntSearch"
        android:layout_above="@+id/tvAddFr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/mybnt"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:id="@+id/table"

        android:layout_below="@+id/editSearch">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SBD"
                android:id="@+id/tvSBD"
                android:textSize="21dp"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginRight="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:id="@+id/tvTenTS"
                android:textSize="21dp"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginRight="15dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"
                android:id="@+id/tvNgaySinh"
                android:textSize="21dp"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:layout_marginRight="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nơi sinh"
                android:id="@+id/tvNoiSinh"
                android:textSize="21dp"
                android:textColor="@color/abc_input_method_navigation_guard"
               />
        </TableRow>
    </TableLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvDSSV"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bntSearch" />

</RelativeLayout>
